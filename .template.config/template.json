{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nery",
  "classifications": ["Web", "API", "Onion", "Clean"],
  "identity": "DotNetOnion.Template",
  "name": "DotNetOnion Architecture Template",
  "shortName": "dotnet-onion",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "DotNetOnion.Template",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            "**/.vs/**",
            "**/.vscode/**",
            "**/.idea/**",
            "**/.git/**",
            "**/.gitignore",
            "**/node_modules/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0",
          "description": ".NET 6.0"
        },
        {
          "choice": "net7.0",
          "description": ".NET 7.0"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "net8.0"
    }
  }
}